<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>co.estampas.servlets.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>guardarEstampa</servlet-name>
        <servlet-class>co.estampas.servlets.guardarEstampa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>guardarRegistro</servlet-name>
        <servlet-class>co.estampas.servlets.guardarRegistro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>administrador</servlet-name>
        <servlet-class>co.estampas.servlets.administrador</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>guardarEstampa</servlet-name>
        <url-pattern>/guardarEstampa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>guardarRegistro</servlet-name>
        <url-pattern>/guardarRegistro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>administrador</servlet-name>
        <url-pattern>/administrador</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>dirUploadFiles</param-name>
        <param-value>/estampas</param-value>
    </context-param>
    <context-param>
        <param-name>maxFileSize</param-name>
        <param-value>3000000</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>guardarEstampa</servlet-name>
        <url-pattern>/guardarEstampa</url-pattern>
    </servlet-mapping>
    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>file-upload</param-name>
        <param-value>
            \estampas
        </param-value>
    </context-param>
</web-app>
